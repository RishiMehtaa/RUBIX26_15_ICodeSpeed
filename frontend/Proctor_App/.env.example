# Proctor App Environment Configuration
# Copy this file to .env and adjust values for your environment

# ============================================
# Development vs Production
# ============================================
NODE_ENV="development"

# ============================================
# Frontend Development Server
# ============================================
VITE_DEV_SERVER_PORT="5173"

# ============================================
# Backend API Configuration
# ============================================
VITE_API_URL="http://127.0.0.1:8000/api/"

# ============================================
# Python Monitor Configuration
# ============================================
# Path to the ML project directory (relative to app root or absolute)
PYTHON_PROJECT_PATH="Mustan_ML_stuff"

# Python script to run for background monitoring
PYTHON_SCRIPT_NAME="proctor_main_background.py"

# Python executable path (leave empty for auto-detection)
# Examples:
#   Windows: Mustan_ML_stuff/.venv/Scripts/python.exe
#   macOS/Linux: Mustan_ML_stuff/.venv/bin/python
PYTHON_EXECUTABLE_PATH=""

# Participant image path (relative to project path)
PARTICIPANT_IMAGE_PATH="data/participant.png"

# ============================================
# Monitoring Configuration
# ============================================
# Enable/disable proctoring monitor spawning
ENABLE_MONITOR="true"

# Alert state file name (written by Python, read by Electron)
ALERT_STATE_FILENAME="alert_state.txt"

# Log directory path (relative to project path)
LOG_DIRECTORY_PATH="logs/proctoring"

# Poll interval for alert state file (milliseconds)
ALERT_POLL_INTERVAL="200"

# ============================================
# Feature Detection Flags
# ============================================
# These control what the Python monitor enables
ENABLE_FACE_DETECTION="true"
ENABLE_FACE_MATCHING="true"
ENABLE_EYE_TRACKING="true"
ENABLE_PHONE_DETECTION="false"

# ============================================
# Session Configuration
# ============================================
# Default session ID prefix
SESSION_ID_PREFIX="session"

# ============================================
# Electron Window Configuration
# ============================================
# Window dimensions
WINDOW_WIDTH="1400"
WINDOW_HEIGHT="900"
WINDOW_MIN_WIDTH="1200"
WINDOW_MIN_HEIGHT="700"

# Enable DevTools in development
ENABLE_DEVTOOLS="true"

# Kiosk mode for production (locks fullscreen)
ENABLE_KIOSK_MODE="false"

# ============================================
# Security Configuration
# ============================================
# Enable web security (recommended: true)
ENABLE_WEB_SECURITY="true"

# Context isolation (recommended: true for security)
ENABLE_CONTEXT_ISOLATION="true"

# Node integration in renderer (recommended: false for security)
ENABLE_NODE_INTEGRATION="false"

// ...existing code...

# ============================================
# Student ID Storage Configuration
# ============================================
# Directory to store student ID card images (relative to frontend root)
VITE_STUDENT_ID_STORAGE_PATH="public/uploads/student-ids"