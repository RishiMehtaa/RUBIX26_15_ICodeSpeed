{
  "appId": "com.aiproctor.app",
  "productName": "AI Proctor",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "package.json"
  ],
  "win": {
    "target": ["nsis"],
    "icon": "public/vite.svg"
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/vite.svg",
    "category": "public.app-category.education"
  },
  "linux": {
    "target": ["AppImage"],
    "icon": "public/vite.svg",
    "category": "Education"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
